<table id="search_queries" class="table table-success table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Status</th>
      <th>Created</th>
      <th>Start / End</th>
    </tr>
  </thead>
  <tbody>
    {{ range .Queries }}
    <tr>
      <th>{{ .ID }}</th>
      <th><big onclick="load_search_results({{ .ID }});">{{ .Title }}</big></th>
      <th>
        {{ if .IsFinished }}
        {{ if .Status }}
        Finished successfully
        {{ else }}
        Error: {{ .Message }}
        {{ end }}
        {{ end }}
      </th>
      <th>
        {{ fmt_time_minute .TimeCreated }}
      </th>
      <th>
        {{ if not .TimeStarted.IsZero }}
        {{ fmt_time_minute .TimeStarted }}
        {{ if not .TimeFinished.IsZero }}
        -- {{ fmt_time_minute .TimeFinished }}
        {{ end }}
        {{ end }}
      </th>
    </tr>
    {{ end }}
  </tbody>
</table>
{{ end }}
