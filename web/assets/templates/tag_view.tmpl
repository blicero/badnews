{{ $item_cnt := .ItemCnt }}
{{ range $idx, $tag := .Tags }}
<tr id="tag_details_{{ $tag.ID }}">
  <td>{{ $tag.ID }}</td>
  <td>
    <h4 onclick="load_tag_details({{ $tag.ID }});">{{ $tag.Name }}</h4>
  </td>
  <td>{{ index $item_cnt $tag.ID }}</td>
  <td>&nbsp;</td>
</tr>
{{ end }}
{{ end }}
